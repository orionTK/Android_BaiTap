<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Mall_Product_Activity">

    <ImageView
        android:layout_marginBottom="20dp"
        android:id="@+id/img_item_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/item1" />

    <TextView
        android:id="@+id/text_Title_Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        android:text="Title"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/text_Price_Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="left"
        android:text="200,000 ₫"
        android:textColor="@color/Red"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sizeS"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button"
            android:src="@drawable/ic_add_black_cart"
            android:text="S" />

        <Button
            android:backgroundTint="@color/pink_50"
            android:id="@+id/sizeM"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button"
            android:src="@drawable/ic_add_black_cart"
            android:text="M" />

        <Button
            android:id="@+id/sizeL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button"
            android:src="@drawable/ic_add_black_cart"
            android:text="L" />

        <Button
            android:id="@+id/sizeXL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:src="@drawable/ic_add_black_cart"
            android:text="XL" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@id/imagePro"
        android:orientation="horizontal">

        <ImageButton
            android:layout_marginRight="20dp"
            android:id="@+id/imgBtnRemove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#C6C0C0"
            android:src="@drawable/ic_remove_black_cart" />

        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/txtSoLuong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#EFE5E5"
            android:gravity="center_horizontal"
            android:text="1"
            android:textAlignment="center"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/imgBtnAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#C6C0C0"
            android:src="@drawable/ic_add_black_cart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/add_Cart"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/red_A200"
            android:text="THÊM VÀO GIỎ"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </LinearLayout>

</LinearLayout>