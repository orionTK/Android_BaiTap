<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp"
    android:layout_margin="2dp"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageProOrder"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/tra" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtNameProductOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="meo"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageProOrder"
                        android:gravity="center_vertical"
                        android:text="SL: x"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtNumPro"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/txtPricaOrder"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:text="100.000"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtGachDuoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=" Ä‘"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>





</androidx.cardview.widget.CardView>
